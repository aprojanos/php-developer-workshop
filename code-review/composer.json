{
    "name": "gyakorlatok/code-review",
    "description": "Code Review feladat PDO, LoggerInterface, és PHPUnit használatával (in-memory SQLite).",
    "type": "project",
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "psr/log": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Components\\": "components"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
